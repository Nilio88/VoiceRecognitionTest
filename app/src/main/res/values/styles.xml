<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardview_style">
        <item name="android:layout_width">@dimen/cardview_width</item>
        <item name="android:layout_height">@dimen/cardview_height</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin</item>
    </style>

    <style name="cardview_linearlayout_style">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">@dimen/linearLayout_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cardview_text_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardview_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
